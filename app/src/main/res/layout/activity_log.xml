<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/padding_screen"
    tools:context=".LogActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="@string/title_activity_home"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="96dp"
        android:layout_marginBottom="42dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:id="@+id/phone_view"
        android:hint="请输入账号"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:id="@+id/password_view"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        android:layout_marginTop="85dp"
        >
        <CheckBox
            android:shadowColor="@color/colorPrimary"
            android:textColor="@color/colorPrimary"
            android:id="@+id/checkbox_view"
            android:layout_marginRight="20dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读并同意" />


        <TextView   android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textColor="#1DC078" android:text="《惠民商城用户服务协议》"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="登录"
        android:id="@+id/login_btn_view"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        >
        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册账号" />

        <TextView
            android:gravity="end"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="忘记密码"/>

    </LinearLayout>



</LinearLayout>